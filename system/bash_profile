#!/bin/bash
#

######
## Resolves the script path for the dotfiles
## allowing to run from anywhere
######

READLINK=$(which greadlink || which readlink)
CURRENT_SCRIPT=$BASH_SOURCE

if [[ -n $CURRENT_SCRIPT && -x "$READLINK" ]]; then
  SCRIPT_PATH=$($READLINK -f "$CURRENT_SCRIPT")
  DOTFILES_DIR=$(dirname "$SCRIPT_PATH")
elif [ -d "$HOME/.dotfiles" ]; then
  DOTFILES_DIR="$HOME/.dotfiles"
else
  echo "Unable to find dotfiles, exiting."
  return
fi

######

#Files to source in
for DOTFILE in "$DOTFILES_DIR"/system/.{function_*,path,env,alias,,chruby,prompt}; do
  [ -f "$DOTFILE" ] && . "$DOTFILE"
done

### Make sourcing happen at bottom of bash_profile, or on other bash script
source $HOME/.bashrc  # get aliases
source $HOME/.bash-aliases # get aliases
source $HOME/.git-prompt.sh
